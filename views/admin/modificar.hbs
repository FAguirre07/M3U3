<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar una novedad</h4>
            <form action="/admin/novedades/modificar" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="id_emp" value="{{novedad.id_emp}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="titulo" placeholder="Titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="subtitulo" placeholder="Subtitulo" value="{{novedad.subtitulo}}"></textarea>
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="cuerpo" placeholder="Cuerpo" value="{{novedad.cuerpo}}"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                {{#if error}}
                <h5>{{message}}</h5>
                {{/if}}
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
</div>