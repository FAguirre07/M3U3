<div class="container-fluid">
  <div id="home" class="hero row align-items-center scroll_section">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <div class="col-lg-3 offset-lg-2">
      <div class="container" style="margin: 50px auto"></div>
      <div class="row">
        <div class="col">

        </div>
      </div>
      <h2>
        <p class="text-right">Hola {{ usuario }} !</p>
      </h2>
      <h1>
        <p>¡Proximamente nuevas novedades!</p>
      </h1>
      <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-7" style="margin-top: 9px; margin-left: 9px;">
    <h2>Listado de Novedades</h2>
    <div class="col -5 text-right">
      <a href="" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
    </div>
  </div>
</div>

<table class="table" style="margin-left: 4px;">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col" class="text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each novedades}}
    <tr>
      <th scope="row">{{id_emp}}</th>
      <td>{{titulo}}</td>
      <td class="text-center">
        <a href="/admin/novedades/modificar/{{id_emp}}" class="btn btn-secondary" style="width: 42px; height:38px"><i
            class="fas fa-pencil-alt"></i></a>
        <a href="/admin/novedades/eliminar/{{id_emp}}" class="btn btn-secondary" style="width: 42px; height:38px"><i
            class="fas fa-trash"></i></a>

        <a href="/admin/novedades/agregar" style="width: 42px; height:38px" class="btn btn-success"><i
            class="fas fa-plus"></i>Nuevo</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>


<footer>
  <p class="text-center"><b>Diseñado por: FAguirre</b></p>
</footer>