<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="titulo" placeholder="Titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="subtitulo" placeholder="Subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="cuerpo" placeholder="Cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 42px; height:38px">Guardar</button>
                {{#if error}}
                <h5>{{message}}</h5>
                {{/if}}
        </div>
    </div>